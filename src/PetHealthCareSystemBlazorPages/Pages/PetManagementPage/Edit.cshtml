@page
@model PetHealthCareSystemRazorPages.Pages.PetManagementPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pet.Name" class="control-label"></label>
                <input asp-for="Pet.Name" class="form-control" />
                <span asp-validation-for="Pet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Species" class="control-label"></label>
                <input asp-for="Pet.Species" class="form-control" />
                <span asp-validation-for="Pet.Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Breed" class="control-label"></label>
                <input asp-for="Pet.Breed" class="form-control" />
                <span asp-validation-for="Pet.Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.DateOfBirth" class="control-label"></label>
                <input asp-for="Pet.DateOfBirth" class="form-control" />
                <span asp-validation-for="Pet.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pet.IsNeutered" /> @Html.DisplayNameFor(model => model.Pet.IsNeutered)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Gender" class="control-label"></label>
                <input asp-for="Pet.Gender" class="form-control" />
                <span asp-validation-for="Pet.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.OwnerID" class="control-label"></label>
                <select asp-for="Pet.OwnerID" class="form-control" asp-items="ViewBag.OwnerID"></select>
                <span asp-validation-for="Pet.OwnerID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Pet.Id" />
            <div class="form-group">
                <label asp-for="Pet.CreatedBy" class="control-label"></label>
                <input asp-for="Pet.CreatedBy" class="form-control" />
                <span asp-validation-for="Pet.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.LastUpdatedBy" class="control-label"></label>
                <input asp-for="Pet.LastUpdatedBy" class="form-control" />
                <span asp-validation-for="Pet.LastUpdatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.DeletedBy" class="control-label"></label>
                <input asp-for="Pet.DeletedBy" class="form-control" />
                <span asp-validation-for="Pet.DeletedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.CreatedTime" class="control-label"></label>
                <input asp-for="Pet.CreatedTime" class="form-control" />
                <span asp-validation-for="Pet.CreatedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.LastUpdatedTime" class="control-label"></label>
                <input asp-for="Pet.LastUpdatedTime" class="form-control" />
                <span asp-validation-for="Pet.LastUpdatedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.DeletedTime" class="control-label"></label>
                <input asp-for="Pet.DeletedTime" class="form-control" />
                <span asp-validation-for="Pet.DeletedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

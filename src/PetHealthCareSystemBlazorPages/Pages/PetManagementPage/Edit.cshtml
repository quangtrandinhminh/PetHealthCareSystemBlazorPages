@page
@model PetHealthCareSystemRazorPages.Pages.PetManagementPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="hidden-attribute" >
                <label asp-for="Pet.Id" class="control-label"></label>
                <input readonly asp-for="Pet.Id" class="form-control" value="@Model.Pet.Id" />
                <span asp-validation-for="Pet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Name" class="control-label"></label>
                <input asp-for="Pet.Name" class="form-control" value="@Model.Pet.Name" />
                <span asp-validation-for="Pet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Species" class="control-label"></label>
                <input asp-for="Pet.Species" class="form-control" value="@Model.Pet.Species" />
                <span asp-validation-for="Pet.Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Breed" class="control-label"></label>
                <input asp-for="Pet.Breed" class="form-control" value="@Model.Pet.Breed" />
                <span asp-validation-for="Pet.Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pet.DateOfBirth" class="control-label"></label>
                <input asp-for="Pet.DateOfBirth" class="form-control" value="@Model.Pet.DateOfBirth" />
                <span asp-validation-for="Pet.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Pet.IsNeutered" checked="@Model.Pet.IsNeutered" />
                <label class="form-check-label" for="Pet_IsNeutered">
                    @Html.DisplayNameFor(model => model.Pet.IsNeutered)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Pet.Gender" class="control-label"></label>
                <input asp-for="Pet.Gender" class="form-control" value="@Model.Pet.Gender" />
                <span asp-validation-for="Pet.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
